<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_gray"
    android:fitsSystemWindows="true">

    <!-- Custom Top Bar -->
    <include
        android:id="@+id/topBar"
        layout="@layout/layout_app_bar"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="@dimen/_16sdp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_2sdp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Details"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/brand_blue"
                        android:layout_marginBottom="@dimen/_16sdp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:hint="Company Name"
                        app:startIconDrawable="@drawable/ic_business"
                        app:startIconTint="@color/brand_blue"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/gray_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/companyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13ssp"
                            android:inputType="textCapWords" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:hint="Password"
                        app:startIconDrawable="@drawable/ic_lock" 
                        app:startIconTint="@color/brand_blue"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/gray_text"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passwordInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textSize="@dimen/_13ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:hint="Card Type"
                        app:startIconDrawable="@drawable/ic_card_membership"
                        app:startIconTint="@color/brand_blue"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/cardTypeInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:text="Membership"
                            android:textSize="@dimen/_13ssp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <!-- Info Card for Read-only Details -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/memberInfoCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#E0E0E0"
                        app:cardBackgroundColor="#F8F9FF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_12sdp">

                            <!-- Member ID & Validity -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:baselineAligned="false"
                                android:layout_marginBottom="@dimen/_12sdp">
                                
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MEMBER ID"
                                        android:textSize="@dimen/_9ssp"
                                        android:textColor="@color/gray_text"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:id="@+id/memberIdText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="---"
                                        android:textSize="@dimen/_13ssp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:layout_marginTop="@dimen/_2sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="VALID UPTO"
                                        android:textSize="@dimen/_9ssp"
                                        android:textColor="@color/gray_text"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:id="@+id/validUptoText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="---"
                                        android:textSize="@dimen/_13ssp"
                                        android:textColor="@color/brand_blue"
                                        android:textStyle="bold"
                                        android:layout_marginTop="@dimen/_2sdp" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E0E0E0"
                                android:layout_marginBottom="@dimen/_12sdp" />

                            <!-- Contact Info Rows -->
                            <LinearLayout
                                android:id="@+id/phoneRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="@dimen/_10sdp">
                                <ImageView
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:src="@drawable/ic_phone"
                                    app:tint="@color/brand_blue" />
                                <TextView
                                    android:id="@+id/phoneNumberText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="---"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/whatsappRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="@dimen/_10sdp">
                                <ImageView
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:src="@drawable/ic_whatsapp_icon"
                                    app:tint="@color/brand_blue" />
                                <TextView
                                    android:id="@+id/whatsappNumberText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="---"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/emailRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="@dimen/_10sdp">
                                <ImageView
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:src="@drawable/ic_email"
                                    app:tint="@color/brand_blue" />
                                <TextView
                                    android:id="@+id/emailText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="---"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/websiteRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="@dimen/_10sdp">
                                <ImageView
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:src="@drawable/ic_globe"
                                    app:tint="@color/brand_blue" />
                                <TextView
                                    android:id="@+id/websiteText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="---"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/addressRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="top"
                                android:layout_marginBottom="@dimen/_4sdp">
                                <ImageView
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:src="@drawable/ic_location"
                                    app:tint="@color/brand_blue" />
                                <TextView
                                    android:id="@+id/addressText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:text="---"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/black"
                                    android:lineSpacingExtra="2dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="@dimen/_16sdp" />

                    <LinearLayout
                        android:id="@+id/scanningContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/statusMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ready to write"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/_12ssp"
                            android:gravity="center"
                            android:layout_marginBottom="@dimen/_12sdp" />

                        <ProgressBar
                            android:id="@+id/scanProgress"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:visibility="gone"
                            android:indeterminateTint="@color/brand_blue" />

                        <TextView
                            android:id="@+id/tapCardHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="TAP CARD NOW..."
                            android:textStyle="bold"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="@color/brand_blue"
                            android:visibility="gone"
                            android:layout_marginBottom="@dimen/_16sdp" />

                        <Button
                            android:id="@+id/startScanButton"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:text="Start Scan &amp; Write"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            app:cornerRadius="@dimen/_8sdp"
                            app:backgroundTint="@color/brand_blue" />

                        <Button
                            android:id="@+id/cancelScanButton"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:text="Cancel Scan"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:visibility="gone"
                            app:cornerRadius="@dimen/_8sdp"
                            app:backgroundTint="@color/error_red" />

                        <Button
                            android:id="@+id/clearCardButton"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:text="Clear Card"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:layout_marginTop="@dimen/_12sdp"
                            app:cornerRadius="@dimen/_8sdp"
                            app:backgroundTint="@color/gray_text" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

