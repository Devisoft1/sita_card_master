<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main Gradient Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="@color/brand_blue_dark"
                android:startColor="@color/brand_blue"
                android:type="linear" />
        </shape>
    </item>

    <!-- Top Right Rotated Square (Diamond) -->
    <item
        android:right="-80dp"
        android:top="-80dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <size
                    android:width="200dp"
                    android:height="200dp" />
                <solid android:color="#1AFFFFFF" /> <!-- White with 10% opacity -->
            </shape>
        </rotate>
    </item>

    <!-- Bottom Left Rotated Square (Large) -->
    <item
        android:bottom="-100dp"
        android:left="-50dp">
         <rotate android:fromDegrees="30">
            <shape android:shape="rectangle">
                <size
                    android:width="300dp"
                    android:height="300dp" />
                <solid android:color="#0DFFFFFF" /> <!-- White with 5% opacity -->
            </shape>
        </rotate>
    </item>
    
    <!-- Middle Right Accent Triangle (Rotated Square clipped) -->
    <item
        android:top="250dp"
        android:right="-60dp">
         <rotate android:fromDegrees="60">
            <shape android:shape="rectangle">
                <size
                    android:width="150dp"
                    android:height="150dp" />
                <solid android:color="#0AFFFFFF" />
            </shape>
        </rotate>
    </item>

    <!-- Small decorative circle top left -->
    <item
        android:top="50dp"
        android:left="20dp">
        <shape android:shape="oval">
             <size
                android:width="20dp"
                android:height="20dp" />
            <solid android:color="#1AFFFFFF" />
        </shape>
    </item>

</layer-list>
