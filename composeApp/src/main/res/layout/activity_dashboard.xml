<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_gray"
    android:fitsSystemWindows="true">

    <!-- Custom Top Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_8sdp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:padding="@dimen/_8sdp"
                android:scaleType="centerInside"
                app:tint="@color/brand_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/dashboardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                android:textColor="@color/brand_blue"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/_8sdp" />

            <Button
                android:id="@+id/logoutButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/error_red"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:id="@+id/dashboardScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_8sdp">

            <LinearLayout
                android:id="@+id/mainContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Scan Container -->
                <LinearLayout
                    android:id="@+id/scanContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/logoCard"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:src="@drawable/logo"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Logo" />

                    <TextView
                        android:id="@+id/scanInstruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="Tap logo to scan card"
                        android:textColor="@color/brand_blue"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/scanProgress"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:indeterminateTint="@color/brand_blue"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Details Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/detailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sdp">
                        
                        <!-- Content omitted for brevity, keeping existing structure -->
                        <TextView
                            android:id="@+id/premiumMemberLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PREMIUM MEMBER"
                            android:textColor="#C5A900"
                            android:textSize="@dimen/_8ssp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/mainInfoRow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/premiumMemberLabel">
                            
                             <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Member ID"
                                    android:textColor="@color/gray_text"
                                    android:textSize="@dimen/_7ssp" />
                                <TextView
                                    android:id="@+id/displayMemberId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="N/A"
                                    android:textColor="@color/brand_blue"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Company"
                                    android:textColor="@color/gray_text"
                                    android:textSize="@dimen/_7ssp" />
                                <TextView
                                    android:id="@+id/displayCompany"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="N/A"
                                    android:textColor="@color/brand_blue"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:ellipsize="end" />
                            </LinearLayout>
                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            app:cardBackgroundColor="#F5F7FA"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:layout_constraintTop_toBottomOf="@id/mainInfoRow">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_12sdp">
                                
                                 <TextView
                                    android:id="@+id/totalBuyLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Buy"
                                    android:textColor="@color/gray_text"
                                    android:textSize="@dimen/_7ssp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/displayTotalBuy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â‚¹0.00"
                                    android:textColor="@color/brand_blue"
                                    android:textSize="@dimen/_18ssp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/totalBuyLabel" />

                                <androidx.constraintlayout.widget.Barrier
                                    android:id="@+id/barrier1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:barrierDirection="bottom"
                                    app:constraint_referenced_ids="displayTotalBuy,displayValidUpto" />

                                <TextView
                                    android:id="@+id/amountLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:text="Amount (Current Total)"
                                    android:textColor="@color/gray_text"
                                    android:textSize="@dimen/_7ssp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/barrier1" />

                                <TextView
                                    android:id="@+id/displayAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading..."
                                    android:textColor="#4CAF50"
                                    android:textSize="@dimen/_13ssp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/amountLabel" />

                                <androidx.constraintlayout.widget.Barrier
                                    android:id="@+id/barrier2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:barrierDirection="bottom"
                                    app:constraint_referenced_ids="displayAmount,displayMembershipValidity" />

                                <TextView
                                    android:id="@+id/globalTotalLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:text="Global Balance"
                                    android:textColor="@color/gray_text"
                                    android:textSize="@dimen/_7ssp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/barrier2" />

                                <TextView
                                    android:id="@+id/displayGlobalTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading..."
                                    android:textColor="#81C784"
                                    android:textSize="@dimen/_13ssp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/globalTotalLabel" />

                                <TextView
                                    android:id="@+id/validUptoLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Card Validity"
                                    android:textColor="@color/gray_text"
                                    android:textSize="@dimen/_7ssp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/displayValidUpto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="N/A"
                                    android:textColor="@color/brand_blue"
                                    android:textSize="@dimen/_11ssp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/validUptoLabel" />

                                <TextView
                                    android:id="@+id/membershipValidityLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:text="Membership Validity"
                                    android:textColor="@color/gray_text"
                                    android:textSize="@dimen/_7ssp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/barrier1" />

                                <TextView
                                    android:id="@+id/displayMembershipValidity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loading..."
                                    android:textColor="@color/brand_blue"
                                    android:textSize="@dimen/_9ssp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/membershipValidityLabel" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Error Container -->
                <LinearLayout
                    android:id="@+id/errorContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/errorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member not found"
                        android:textColor="@color/error_red"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Actions -->
                <LinearLayout
                    android:id="@+id/actionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/newCardButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:text="Issue New Card"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:cornerRadius="@dimen/_8sdp"
                        app:backgroundTint="@color/brand_blue"
                        android:layout_marginBottom="@dimen/_4sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/deleteCardButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1"
                            android:text="Delete Card"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            app:cornerRadius="@dimen/_8sdp"
                            app:backgroundTint="@color/error_red"
                            android:layout_marginEnd="@dimen/_6sdp" />

                        <Button
                            android:id="@+id/clearButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1"
                            android:text="Clear Page"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            app:cornerRadius="@dimen/_8sdp"
                            app:backgroundTint="#9E9E9E"
                            android:layout_marginStart="@dimen/_6sdp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/stopScanButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Stop Scanning"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:cornerRadius="@dimen/_10sdp"
                        app:backgroundTint="@color/gray_text" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>